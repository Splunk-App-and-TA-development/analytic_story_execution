<form hideFilters="false">
  <label>Configure and Execute</label>
  <fieldset autoRun="false" submitButton="true">
    <input type="dropdown" token="story" searchWhenChanged="true">
      <label>Select a story</label>
      <search>
        <query>| rest /services/configs/conf-savedsearches splunk_server=local count=0 |search action.escu.search_type = detection | table  action.escu.analytic_story | rename action.escu.analytic_story as story | eval story = "{\"story\": " + story + "}" | spath input=story | rename story{} as story | stats count by story | table story</query>
      </search>
      <fieldForLabel>story</fieldForLabel>
      <fieldForValue>story</fieldForValue>
    </input>
    <input type="radio" token="mode">
      <label>Mode</label>
      <choice value="now">Now</choice>
      <choice value="schedule">Schedule</choice>
      <change>
        <condition label="Now">
          <set token="showTimePicker">Y</set>
          <unset token="showCron"></unset>
        </condition>
        <condition label="Schedule">
          <set token="showCron">Y</set>
          <unset token="showTimePicker"></unset>
        </condition>
      </change>
      <default>now</default>
      <initialValue>now</initialValue>
    </input>
    <input type="text" token="cron" depends="$showCron$">
      <label>Cron</label>
    </input>
    
    <input type="text" token="earliest" depends="$showCron$">
      <label>Earliest</label>
    </input>
    <input type="text" token="latest" depends="$showCron$">
      <label>Latest</label>
    </input>
    <input type="time" token="time" depends="$showTimePicker$">
      <label></label>
      <default>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </default>
    </input>
  </fieldset>
  <row>
    <panel>
      <table>
        <title>Detection Searches</title>
        <search>
          <query>| rest /services/configs/conf-savedsearches splunk_server=local count=0 | search action.escu.search_type = detection action.escu.analytic_story = "*$story$*" | table action.escu.full_search_name</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="count">10</option>
        <option name="drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </table>
    </panel>
  </row>
</form>