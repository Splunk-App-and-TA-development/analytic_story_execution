<form theme="dark">
  <label>Update</label>
  <description>Select which stories to update below, or select All to update all stories. WARNING updating all stories might take a few minutes.</description>
  <fieldset submitButton="true" autoRun="false">
    <input type="dropdown" token="stories">
      <label>Available Stories</label>
      <fieldForLabel>name</fieldForLabel>
      <fieldForValue>name</fieldForValue>
      <search>
        <query>| asxupdate list_all=true| spath name</query>
        <earliest>-24h@h</earliest>
        <latest>now</latest>
      </search>
    </input>
  </fieldset>
  <row>
    <panel>
      <event>
        <title>Update Status</title>
        <search>
          <query>| asxupdate story=$stories$</query>
          <earliest>-24h@h</earliest>
          <latest>now</latest>
        </search>
        <option name="list.drilldown">none</option>
        <option name="refresh.display">progressbar</option>
      </event>
    </panel>
  </row>
</form>
